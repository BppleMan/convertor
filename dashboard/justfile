#!/usr/bin/env just --justfile

export PATH := join(justfile_directory(), "node_modules", "bin") + ":" + env_var('PATH')

# profile: dev | prod
dashboard profile="dev":
    #!/bin/sh
    pnpm install
    PROFILE="development"
    if [ "{{ profile }}" = "prod" ]; then
        PROFILE="production"
    fi
    pnpm ng build --configuration ${PROFILE}
